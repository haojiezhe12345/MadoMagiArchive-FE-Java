<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="8.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="love.madohomu.madomagiarchive_fe_java.MainController">
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
    </padding>

    <HBox>
        <TextField fx:id="mainSearchInput"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button fx:id="userInfoBtn"/>
    </HBox>

    <TabPane side="BOTTOM" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab text="Home">
        </Tab>

        <Tab text="Files">
            <VBox>
                <HBox spacing="8.0">
                    <Button text="Edit"/>
                    <Button text="Delete"/>
                    <Pane HBox.hgrow="ALWAYS"/>
                </HBox>
                <FlowPane VBox.vgrow="ALWAYS"/>
            </VBox>
        </Tab>

        <Tab text="Explore">
        </Tab>

        <Tab text="Settings">
        </Tab>
    </TabPane>
</VBox>
